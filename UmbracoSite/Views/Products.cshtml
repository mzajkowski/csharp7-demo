@helper RenderProduct(object product)
{
    string name = string.Empty, 
           backgroundImage = string.Empty, 
           url = string.Empty, 
           price = string.Empty;

    switch (product)
    {
        case Product p when p.ProductName.Length > 10:
            name = $"{p.ProductName.Substring(0, Math.Min(p.ProductName.Length, 10))}...";
            backgroundImage = p.Photos.FirstOrDefault()?.Url;
            price = p.Price.ToString("F");

            break;

        case Product p:
            name = p.ProductName;
            backgroundImage = p.Photos.FirstOrDefault()?.Url;
            price = p.Price.ToString("F");

            break;

        case SuperProduct sp:
            name = $"Super {sp.ProductName}";
            backgroundImage = sp.Photos.FirstOrDefault()?.Url;
            price = sp.Price.ToString("F");

            break;
    }

    <a href="@url" class="product-grid__item" style="background-image: url('@backgroundImage')">
        <div class="product-grid__item__overlay">
            <div class="product-grid__item__name">@name</div>
            <div class="product-grid__item__price">@Model.Content.DefaultCurrency @price</div>
        </div>
    </a>
}